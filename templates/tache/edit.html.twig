{% extends 'base2.html.twig' %}

{% block title %}Modifier la tâche{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier la tâche</h1>

        <!-- Formulaire de modification -->
        <div class="card shadow-sm rounded-lg">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_widget(form) }}
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">Mettre à jour</button>
                {{ form_end(form) }}
            </div>
        </div>

        <!-- Lien retour à la liste des tâches -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_tache_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
